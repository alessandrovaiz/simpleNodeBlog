<%- include ../../partials/header.ejs %>
    <body>
        <%- include ../../partials/navbar.ejs %>
        <div class="container">
            <hr>
            <h2>Categorias</h2>
            <br>
            <a class="btn btn-danger" href="/admin/categories/new">Criar nova categoria</a>
            <hr>
            <table class="table table-bordered bg-dark tables">
                <thead>
                    <tr>
                        <th> ID </th>
                        <th> Título </th>
                        <th> Slug </th>
                        <th> Ações </th>
                    </tr>
                </thead>
                <tbody>
                    <% categories.forEach(category=>{ %>
                    <tr>
                        <th><%= category.id %></th>
                        <th><%= category.title %></th>
                        <th><%= category.slug %></th>
                        <th> 
                            <div style="text-align: center;">
                            <a class="btn btn-light" href="/admin/categories/edit/<%= category.id%>">Editar</a> 
                                <form method ="POST" action="/categories/delete" style="display: inline" onsubmit="wantDelete(event,this)">
                                <input type="hidden" name ="id" value="<%= category.id %>">
                                <button class="btn btn-danger">Deletar</button>
                            </form>
                            </div>
                        </th>
                    </tr>
                    <% }) %>
                </tbody>
            </table>
        </div>
    </body>

    <%- include ../../partials/footer.ejs %>
    <script>
            function wantDelete(event,form) {
                event.preventDefault()
                let decision = confirm("Você realmente deseja deletar a categoria?")
                if (decision) {
                    form.submit()
                }
                
            }   
    </script>